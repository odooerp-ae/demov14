<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="measurement_request_form_view" model="ir.ui.view">
        <field name="name">measurement.request.form</field>
        <field name="model">measurement.request</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button type="object"
                            string="Measured"
                            name="set_to_measured"
                            states="new"
                            class="btn-primary"/>

                    <button type="object"
                            string="Design"
                            name="set_to_design"
                            states="measured"
                            class="btn-primary"/>

                    <button type="action"
                            string="Cancel"
                            name="%(measurement_cancel_wizard_action)d"
                            context="{'default_request_id': active_id}"
                            states="new,measured,design"
                            class="btn-primary"/>

                    <button type="object"
                            string="Reset To New"
                            name="action_new"
                            states="cancel"
                            class="btn-primary"/>

                    <button type="object"
                            string="Create Quotation"
                            name="action_create_quotation"
                            class="btn-primary"
                            attrs="{'invisible': ['|',('is_so_created', '=', True), ('state', '!=', 'design')]}"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="new,measured,design,done,cancel"/>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one"
                                   context="{'search_default_customer':1, 'show_address': 1}"
                                   options="{'always_reload': True}"/>
                            <field name="schedule_date"/>
                            <field name="employee_id"/>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="is_so_created" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="products" string="Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                <page name="cancel_reason" string="Cancel Reason"
                      attrs="{'invisible':[('state','!=','cancel')],'readonly': True}">
                    <group>
                        <group>
                            <field name="cancel_reason"
                                   attrs="{'invisible':[('state','!=','cancel')],'readonly':True}"/>
                        </group>
                        <group>
                        </group>

                    </group>
                </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="measurement_request_tree_view" model="ir.ui.view">
        <field name="name">measurement.request.tree</field>
        <field name="model">measurement.request</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="schedule_date"/>
                <field name="employee_id"/>
                <field name="sale_order_id" readonly="1"/>
                <field name="state" widget='badge'/>
            </tree>
        </field>
    </record>

    <record id="measurement_request_search_view" model="ir.ui.view">
        <field name="name">measurement.request</field>
        <field name="model">measurement.request</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="employee_id" string="Employee" />
                <filter string="Quotation Created" name="active" domain="[('is_so_created', '=', True)]"/>
                <group expand="0" string="Group By" colspan="4" col="4">
                        <filter string="State" name="state" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Employee" name="employee_id"  context="{'group_by':'employee_id'}"/>
                    </group>
            </search>
        </field>
    </record>

    <record id="action_measurement_request" model="ir.actions.act_window">
        <field name="name">Measurement Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">measurement.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <menuitem id="menu_measurement_request" name="Measurement Requests"
              parent="sale.sale_order_menu"
              action="action_measurement_request" sequence="0"/>
</odoo>