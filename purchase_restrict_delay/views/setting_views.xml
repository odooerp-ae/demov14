<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">Sale configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auto_receipt_reminder']" position="after">
                 <div class="col-12 col-lg-6 o_setting_box" id="days_max_rfq">
                    <div class="o_setting_right_pane">
                     <label for="days_max_rfq"/>
						<span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
						<div class="text-muted">
							Max Days to confirm RFQ and convert to PO
						</div>
						<div class="content-group">
							<div class="mt16">
								<span><field name="days_max_rfq" class="oe_inline"/> days</span>
							</div>
						</div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
